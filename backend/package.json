{
  "name": "frontview-backend",
  "version": "1.0.0",
  "description": "the backend of Frontview",
  "author": "Siarhei Hamanovich <hamanovich@gmail.com> (http://github.com/hamanovich)",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec babel-node -- ./src/index.js",
    "start:prod": "node build/index.js",
    "build": "babel ./src --out-dir build --copy-files"
  },
  "dependencies": {
    "@babel/runtime": "7.5.5",
    "bcrypt": "3.0.6",
    "body-parser": "1.19.0",
    "cloudinary": "1.14.0",
    "core-js": "3.2.1",
    "cors": "2.8.5",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "helmet": "3.20.0",
    "html-to-text": "5.1.1",
    "jsonwebtoken": "9.0.0",
    "juice": "5.2.0",
    "md5": "2.2.1",
    "mongoose": "5.6.11",
    "mongoose-unique-validator": "2.0.3",
    "morgan": "1.9.1",
    "nodemailer": "6.3.0",
    "nodemailer-sendgrid-transport": "0.2.0",
    "pug": "2.0.4",
    "regenerator-runtime": "0.13.3",
    "slug": "1.1.0",
    "validator": "11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/node": "7.5.5",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "nodemon": "1.19.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
